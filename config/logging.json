{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "simple": {
      "format": "[%(asctime)s.%(msecs)03d] [external-server] [%(levelname)s]\t %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "DEBUG",
     "formatter": "simple",
       "stream": "ext://sys.stdout"
    },
    "file": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "DEBUG",
      "formatter": "simple",
      "filename": "log/external_server.log"
    }
  },
  "loggers": {
    "external_server.server": {
      "level": "DEBUG",
      "handlers": ["console", "file"],
      "propagate": false
    },
    "external_server.adapters.mqtt_adapter": {
      "level": "DEBUG",
      "handlers": ["console", "file"],
      "propagate": false
    },
    "external_server.checkers.status_order_checker": {
      "level": "DEBUG",
      "handlers": ["console", "file"],
      "propagate": false
    },
    "external_server.adapters.api_client": {
      "level": "DEBUG",
      "handlers": ["console", "file"],
      "propagate": false
    },
    "external_server.models.event_queue": {
      "level": "DEBUG",
      "handlers": ["console"],
      "propagate": false
    },
    "CommandWaitingThread": {
      "level": "DEBUG",
      "handlers": ["console", "file"],
      "propagate": false
    },
    "tests.utils._mqtt_broker_test": {
      "level": "DEBUG",
      "handlers": ["console", "file"],
      "propagate": false
    }
  },
  "root": {
    "level": "INFO",
    "handlers": ["console", "file"]
  }
}